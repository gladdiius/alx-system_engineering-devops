#!/usr/bin/env bash
# Install Nginx web server if not already installed
if ! command -v nginx &>/dev/null; then
    sudo apt-get update
    sudo apt-get install -y nginx
fi

# Create a simple HTML file for redirection
echo '<html><head><meta http-equiv="refresh" content="0;url=https://www.example.com/new_page"></head></html>' | sudo tee /var/www/html/redirect_me/index.html > /dev/null

# Configure Nginx for redirection using sed
config_block=$(
    cat <<EOL
    location /redirect_me {
        return 301 https://www.example.com/new_page;
    }
EOL
)

sudo sed -i "/server_name _;/a $config_block" /etc/nginx/sites-available/default

# Test Nginx configuration and restart the server
sudo nginx -t && sudo service nginx restart

